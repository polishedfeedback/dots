# Nvim alias
alias vi='nvim'

# Git aliases
alias gs='git status'
alias gc='git commit -m'
alias gaa='git add -A'
alias gpo='git push origin'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gbd='git branch -d'
alias gb='git branch'
alias gd='git diff'
alias gst='git stash'

# Bin aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ll='ls -laF'
alias lc='ls -l | wc -l'
alias lsa='ls -a'

# System management
alias c='clear'
alias h='history'


# Prompt before doing it
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias mkdir='mkdir -p'


